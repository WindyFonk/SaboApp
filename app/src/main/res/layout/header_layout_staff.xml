<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/border_menu_background"
    android:layout_marginEnd="20dp">

    <ImageView
        android:id="@+id/menu_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sabologo"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/menu_logo"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/profile"
        android:background="@drawable/logo_shape"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu_logo"
        android:layout_marginStart="90dp"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        android:text="Sam Horlands"

        android:textStyle="bold"
        android:textColor="@color/white"/>

<androidx.appcompat.widget.AppCompatButton
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:text="edit"
        android:id="@+id/btnEdit"
        android:background="@drawable/border_cart_item"/>
</RelativeLayout>