<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/border_cart_item"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:padding="16dp"
            android:src="@drawable/cats"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineHeight="22sp"
            android:text="Nike Airmax Genome"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:padding="@dimen/cardview_default_radius"
            android:layout_toRightOf="@id/shoesize"
            android:text="15,495"
            android:textColor="#5A0505"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@id/name"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/shoesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size: US 9.5"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_below="@id/name"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Color: White"
            android:id="@+id/shoecolor"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/shoesize"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_remove_24"
            android:layout_toRightOf="@id/shoecolor"
            android:layout_below="@id/price"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"/>
        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:text="1"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginStart="182dp"
            android:layout_marginBottom="1dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_cart_image"
            android:layout_toRightOf="@id/shoecolor"
            android:layout_below="@id/price"
            android:layout_marginTop="8dp"
            android:layout_marginStart="108dp" />
    </RelativeLayout>

</LinearLayout>